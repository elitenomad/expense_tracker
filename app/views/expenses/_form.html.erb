<div class="row">
  <div class="col-md-6 col-md-offset-1">
    <div class="well">

      <%= form_for [@group, @expense], html: {style:"form-inline"} do |f| %>
        <% if @expense.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

            <ul>
            <% @expense.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.text_area :description, class: "form-control",placeholder:"Description", row: "3" %>
        </div>
        <div class="form-group">
          <%= f.number_field :amount, class: "form-control", placeholder:"amount" , value: @expense.amount.to_s %>
        </div>
        <div class="form-group">
          <%= f.select(:user_id, @group.users.map do |user| [user.name, user.id] end, { selected: current_user.id  } , {:class => 'form-control'}) %>
        </div>

        <div class="actions">
          <%= f.submit 'Add Expense', class: "btn btn-default" %>
        </div>
      <% end %>
      </div>
  </div>
</div>