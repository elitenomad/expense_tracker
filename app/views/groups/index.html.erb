<h1>My Groups</h1>

<h2>Your overall balance is <%= show_balance(@total_balance) %> </h2>



<div class="row inline_form">
  <div class="col-md-6">
  <%= form_for(@group, html: {:role => 'form', :class => 'form-inline'}) do |f| %>
      <%= f.text_field :name, :placeholder => 'new group name', :class => 'form-control' %>
      <%= f.submit :class => "btn btn-default" %>
  <% end %>  

  </div> 
</div>

<div class="row">
  <div class="col-md-6">
  <% if @groups.count > 0 %>
    <table class="table table-hover">
      <tr>
        <th></th>
        <th>Group</th>
        <th>Balance</th>
      </tr>
      <% @groups.each do |group| %>
        <tr data-link="<%= group_path(group) %>">
          <td>
            <% if current_user === group.owner %>
              <span class="glyphicon glyphicon-star"></span>
            <% end %>
          </td>
          <td> <%= group.name %> </td>
          <td> <%= show_balance(@my_balances[group]) %> 
            <span class="glyphicon glyphicon-chevron-right"></span>
          </td>
        </tr>
      <% end %>
    </table>
  <% else %>
    <h4> create a group to start sharing expenses with your friends .. </h4>
  <% end %>
  </div>
</div>



