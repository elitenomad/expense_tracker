
<%= content_for(:title, "My Groups") %>
<div class="row">
  <%= link_to 'Add a new Group', new_group_path, class: "btn btn-default" %>
  <div class="container">
    <div class="row">
      <h2 class="text-muted">Your overall balance is <%= show_balance(@total_balance) %> </h2>
    </div>
    <br/>


    <div class="row inline_form">
      <div class="col-md-6">
      <%= form_for(@group, html: {:role => 'form', :class => 'form-inline'}) do |f| %>
          <%= f.text_field :name, :placeholder => 'new group name', :class => 'form-control' %>
          <%= f.submit :class => "btn btn-default" %>
      <% end %>  

      </div> 
  
    </div>

    <div class="row">
      <div class="col-md-12">
        <% if @groups.count > 0 %>
          <table class="table table-bordered table-striped table-hover">
            <tr>
              <th></th>
              <th>Group</th>
              <th>Balance</th>
            </tr>
            <% @groups.each do |group| %>
              <tr data-link="<%= group_path(group) %>">
                <td>
                  <% if current_user === group.owner %>
                    <span class="glyphicon glyphicon-star"></span>
                  <% end %>
                </td>
                <td> <%= group.name %> </td>
                <td> <%= show_balance(@my_balances[group]) %> 
                  <span class="glyphicon glyphicon-chevron-right"></span>
                </td>
              </tr>
            <% end %>
          </table>
        <% else %>
          <h4> create a group to start sharing expenses with your friends .. </h4>
        <% end %>
      </div>
    </div>
  </div>
</div>



